// schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model FacebookEvent {
  id          String   @id @default(uuid())
  eventId     String   @unique
  timestamp   DateTime @db.Timestamp()
  funnelStage FunnelStage
  eventType   FacebookEventType
  data        Json

  @@map("facebookevent")
}

enum FunnelStage {
  top
  bottom
}

enum FacebookEventType {
  ad_view
  page_like
  comment
  video_view
  ad_click
  form_submission
  checkout_complete
}